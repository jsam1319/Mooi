<?xml version="1.0" encoding="UTF-8"?>
<!-- default directory 설정 -->
<decorators defaultdir="/WEB-INF/views/layout">
	<!-- sample -->
	<decorator name="layout" page="layout.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<!-- decorators를 적용시키지 않을 url 패턴 -->
	<excludes>
		<pattern>/excludes/*</pattern>
	</excludes>
</decorators>
